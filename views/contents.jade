extends layout

block content
    .container
        .col-md-12(ng-repeat='user in users track by $index')
            h1 {{user.username}}
            p
              {{user.email}}
            div
              span.badge Posted {{user.username}}
              .pull-right
                span.label.label-default alice
                &nbsp;
                span.label.label-primary story
                &nbsp;
                span.label.label-success blog
                &nbsp;
                span.label.label-info personal
                &nbsp;
                span.label.label-warning Warning
                &nbsp;
                span.label.label-danger Danger
            hr
